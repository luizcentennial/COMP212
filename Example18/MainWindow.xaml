<Window x:Class="Example18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example18"
        mc:Ignorable="d"
        
        Title="Example 18" 
        Height="400" 
        Width="400"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" Width="370">
        <!--The property 'Margin' can be set either as one single value, or a group of 
		multiple space-separated values. One single value sets an equal margin across
		all 4 sides of the control. Multiple values set the margin for each side individually.

		In the example below, the margin is set as follows: 
		
		- Margin left: 0px, 
		- Margin top: 10px, 
		- Margin right: 0px, and 
		- Margin bottom: 0px.-->
        
        <Label Content="Sign In" FontSize="20" HorizontalAlignment="Center" Margin="0 50 0 20"/>

        <Label Content="Username: "/>
        <TextBox Name="txtUsername"/>

        <Label Content="Password: " Margin="0 5 0 0"/>
        <PasswordBox Name="pwdPassword"/>

        <Button Content="Sign In" Margin="0 20 0 0" Name="btnSignIn"/>
    </StackPanel>
</Window>
